<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/loginBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/loginbackground"
        android:contentDescription="@string/login_background_desc"
        android:alpha="0.8"/>

    <!-- Log In Text -->
    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />

    <!-- USN -->
    <EditText
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="USN"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:layout_below="@id/login_title"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="text" />

    <!-- OTP -->
    <EditText
        android:id="@+id/otp_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="OTP"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:layout_below="@id/username_input"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="number" />

    <!-- reCAPTCHA Placeholder -->
    <FrameLayout
        android:id="@+id/recaptcha_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_input"
        android:layout_marginTop="20dp" />

    <!-- Send OTP -->
    <Button
        android:id="@+id/send_otp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND OTP"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        android:layout_below="@id/recaptcha_placeholder"
        android:layout_marginTop="30dp" />
</RelativeLayout>
